#cloud-config
autoinstall:
  version: 1
  
  # Seção de identidade para o instalador
  identity:
    hostname: ubuntu-packer
    username: ubuntu
    password: "*" # Senha trancada, o acesso será apenas por chave SSH

  # Instala pacotes essenciais, incluindo o agente QEMU
  packages:
    - openssh-server
    - qemu-guest-agent

  # Configuração do usuário que será usada pelo cloud-init no primeiro boot
  user-data:
    users:
      - name: ubuntu
        # Garante que a conta não tenha senha e só possa ser acessada via SSH key
        lock_passwd: true
        sudo: ALL=(ALL) NOPASSWD:ALL
        groups: [sudo, admin]
        shell: /bin/bash
        # IMPORTANTE: Insira sua chave pública aqui
        ssh_authorized_keys:
          - ""
    
    # Garante que o serviço do agente QEMU seja iniciado
    runcmd:
      - [ systemctl, enable, --now, qemu-guest-agent ]

  # Garante que a autenticação por senha no SSH seja desativada
  ssh_pwauth: false